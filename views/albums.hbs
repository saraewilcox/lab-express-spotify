{{!-- <h1>Albums for {{albums.0.artists.0.name}}</h1> --}}
<div id="album-results">
    <ul>
        {{#each resultAlbums}}
        <div class="artist-result">
            <li>
                <h3>{{name}}</h3>
                <img src={{images.[1].url}} alt="album-pic">
                <a href="/tracks/{{id}}">View Tracks</a>
            </li>
        </div>
        {{/each}}
    </ul>
</div>